{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Depurar API Node (Render DB)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server.js",
      "envFile": "${workspaceFolder}/.env",
      "runtimeArgs": [
        "--watch"               // opcional: reinicia al detectar cambios
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "outputCapture": "std"
    }
  ]
}
